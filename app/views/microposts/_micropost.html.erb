<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.gravatar.small_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= t(".posted") %> <%= time_ago_in_words(micropost.created_at) %> <%= t(".ago") %>.
    <% if current_user == micropost.user %>
      <%= link_to t(".delete"), micropost_path(micropost), method: :delete,
                  data: { 
                    confirm: t(".confirm_delete"),
                    turbo_method: :delete
                  },
                  class: "text-danger" %>
    <% end %>
  </span>
</li>
