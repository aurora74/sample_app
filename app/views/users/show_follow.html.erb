<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to t("users.show.view_my_profile"), @user %></span>
      <span><%= pluralize(@user.microposts.count, "micropost") %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
      <% if logged_in? && !current_user?(@user) %>
        <%= render "follow_form", user: @user %>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= raw pagy_bootstrap_nav(@pagy) %>
    <% end %>
  </div>
</div>
