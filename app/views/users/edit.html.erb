<% provide(:title, t(".title")) %>
<h1><%= t(".title") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", form_url: @user, submit_text: t(".save_changes") %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".change_gravatar"), Settings.urls.gravatar_edit, target: "_blank", class: "btn btn-default" %>
    </div>
  </div>
</div>
