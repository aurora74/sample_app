<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t(".status_feed") %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t(".welcome") %></h1>
    <h2>
      <%= t(".description",
            tutorial: link_to(t(".tutorial_link"), 
                              Settings.urls.tutorial)).html_safe %>
    </h2>
    <%= link_to t("navigation.signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag(Settings.rails_logo.filename, 
                        alt: Settings.rails_logo.alt_text, 
                        width: Settings.rails_logo.width), 
              Settings.urls.rails %>
<% end %>
